@model Project2.Objects.Models.Products

 <div class="col-lg-5">
       <h3> @Model.Name</h3>
        <img class="img-thumbnail" style="width: 300px; height:200px" src="@Model.IMG" alt="@Model.Name"/>
        <p>Описание: @Model.Description</p>
        <p>Стоимость: @Model.Cost.ToString("c")</p>
         <p><a class="btn btn-warning" asp-controller="ProductsBasket" asp-action="RedirectToBasket" asp-route-productId="@Model.Id">Купить</a></p>
</div>