<!DOCTYPE html>

<html>
 
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
  <header class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/Main/MainPage" class="nav-link px-2 text-secondary">Главная</a></li>
          <li><a href="/Products/Page" class="nav-link px-2 text-white">Вся продукция</a></li>
          <li><a href="/ProductsBasket/Basket" class="nav-link px-2 text-white">Order</a></li>
        </ul>


        <div class="text-end">
           <a class="btn btn-danger" asp-controller="User" asp-action="LogIn">Sign-Up</a>
        </div>
      </div>
    </div>
  </header>
    
    <div style="display:block; margin-left:350px; margin-right:auto">
        @RenderBody()
    </div>
    <footer class="pt-3 mt-4 text-muted border-top">
      © 2022
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
